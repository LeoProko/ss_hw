{
  "name": "one_batch_test",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [
    ],
    "spectrogram": [
    ]
  },
  "arch": {
    "type": "SpEx",
    "args": {
      "n_feats": 128,
      "num_heads": 4,
      "ffn_dim": 128,
      "num_layers": 4,
      "kernel_size": 31,
      "dropout": 0.1
    }
  },
  "data": {
    "train": {
      "batch_size": 10,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LibrispeechSSDataset",
          "args": {
            "data_dir": "data/datasets/librispeech_ss/train",
            "limit": 10
          }
        }
      ]
    },
    "val": {
      "batch_size": 10,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LibrispeechSSDataset",
          "args": {
            "data_dir": "data/datasets/librispeech_ss/val",
            "limit": 10
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 4e-3
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 100,
      "epochs": 50,
      "anneal_strategy": "cos",
      "max_lr": 4e-3,
      "pct_start": 0.1
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "dla-2-ss",
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}